generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())
  username String @unique
  password String
  email String
  surename String?
  birthday DateTime?
  country String?
  image_url String?
  phone_number String?
  total_point Int @default(0)
  role  String @default("student")
  description String?
  is_verified Boolean @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  skills UserSkill[]
  courses Course[]
  otp OTP[]
  studentCourses StudentCourse[]
}

model StudentCourse{
  id Int @id @default(autoincrement())
  course_id Int
  user_username String
  is_finished Boolean @default(false)
  certificate_url String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  course Course @relation(fields: [course_id], references: [id])
  user User @relation(fields: [user_username], references: [username])
}

model Skill{
  id Int @id @default(autoincrement())
  name String @unique
  star_total Int @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  users UserSkill[]
}

model UserSkill{
  id Int @id @default(autoincrement())
  user_username String
  skill_name String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user User @relation(fields: [user_username], references: [username])
  skill Skill @relation(fields: [skill_name], references: [name])
}

model Course{
  id Int @id @default(autoincrement())
  mentor_username String
  title String
  description String
  star_total Int @default(0)
  is_certificate_exist Boolean
  thumbnail_url String
  mentor User @relation(fields: [mentor_username], references: [username])
  contents CourseContent[]
  studentCourses StudentCourse[]
}

model CourseContent{
  id Int @id @default(autoincrement())
  course_id Int
  page Int
  content String @db.LongText
  video_url String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  course Course @relation(fields: [course_id], references: [id])
}

model OTP{
  id Int @id @default(autoincrement())
  user_id Int
  otp_code String
  expired_at DateTime
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user User @relation(fields: [user_id], references: [id])
}
